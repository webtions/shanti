{
  "name": "webtions/shanti",
  "type": "package",
  "description": "An experimental WordPress block theme by Webtions.",
  "keywords": ["WordPress", "Themes"],
  "homepage": "https://github.com/webtions/shanti",
  "license": "GPL-3.0-or-later",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.11",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "php-stubs/wordpress-stubs": "^6.8",
    "php-stubs/wordpress-tests-stubs": "^6.8",
    "phpstan/extension-installer": "^1.4",
    "phpunit/phpunit": "^9.6",
    "wp-cli/i18n-command": "^2.2.5",
    "wptrt/wpthemereview": "^0.2.1"
  },
  "scripts": {
    "lint": "parallel-lint --exclude vendor .",
    "check": "phpcs",
    "fix": "phpcbf",
    "analyze": "php -d memory_limit=2512M vendor/bin/phpstan analyze",
    "package": "git archive --format=zip --output=shanti.zip HEAD",
    "make-pot": "wp i18n make-pot . languages/shanti.pot"
  },
  "config": {
    "allow-plugins": {
    "dealerdirect/phpcodesniffer-composer-installer": true,
    "phpstan/extension-installer": true
    }
  }
}
